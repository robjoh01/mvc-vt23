{% extends 'base.html.twig' %}

{% block title %}Boken - {{ title }}{% endblock %}

{% block content %}

{{ include('flash.html.twig') }}

<main class="main">
    <h1>Om boken: {{ title }}</h1>
    <form class="form book-form" method="POST" action="{{ path("book_update") }}">
        <fieldset>
            <legend>Uppdatera informationen om boken</legend>

            <input type="number" name="id" value="{{ id }}" hidden>

            <label for="title">Titel</label>
            <input type="text" id="title" name="title" value="{{ title }}" placeholder="Skriv in titlen..." required>

            <label for="author">Författare</label>
            <input type="text" id="author" name="author" value="{{ author }}" placeholder="Skriv in författares namn..." required>

            <label for="isbn">ISBN</label>
            <input type="text" id="isbn" name="isbn" value="{{ isbn }}" placeholder="Skriv in ISBN (XXX-X-XX-XXXXXX-X)..." required>

            <label for="img_path">Bild URL</label>
            <input type="text" id="img_path" name="img_path" value="{{ img_path }}" placeholder="Skriv in bild URL..." required>

            <input type="submit" name="do_it" value="Uppdatera boken">
            <input type="reset" value="Återställ informationen">
        </fieldset>
    </form>
    <br>
    <center>
        <a class="orange a-btn" href="{{ path("book_list") }}">
            <button>Tillbaka</button>
        </a>
        <form class="form book-form" method="POST" action="{{ path("book_delete") }}">
            <fieldset>
                <input type="number" name="id" value="{{ id }}" hidden>
                <input type="submit" name="do_it" value="Ta bort boken">
            </fieldset>
        </form>
    </center>
</main>
{% endblock %}